<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.add_new_song">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_addSongImage_register"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/circular_button"
            android:text="ADD PHOTO"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Edittext_songname_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Song Name"
            android:inputType="textAutoComplete"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_addSongImage_register" />

        <EditText
            android:id="@+id/Edittext_artistName_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Artist Name"
            android:inputType="textAutoComplete"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="@+id/Edittext_songname_register"
            app:layout_constraintStart_toStartOf="@+id/Edittext_songname_register"
            app:layout_constraintTop_toBottomOf="@+id/Edittext_songname_register" />

        <Button
            android:id="@+id/button_registerSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/green_button"
            android:text="Add New Song"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/Edittext_artistName_register"
            app:layout_constraintStart_toStartOf="@+id/Edittext_artistName_register"
            app:layout_constraintTop_toBottomOf="@+id/Edittext_artistName_register" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selected_photo_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_addSongImage_register"
            app:layout_constraintEnd_toEndOf="@+id/button_addImage_register"
            app:layout_constraintStart_toStartOf="@+id/button_addSongImage_register"
            app:layout_constraintTop_toTopOf="@+id/button_addImage_register" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
